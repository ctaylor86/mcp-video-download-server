{
  "name": "mcp-video-cloud-server",
  "version": "1.0.0",
  "description": "Remote MCP server for downloading videos from social media platforms and storing them in S3-compatible cloud storage",
  "type": "module",
  "module": "src/index.ts",
  "main": "dist/index.js",
  "bin": {
    "mcp-video-cloud-server": "dist/index.js"
  },
  "scripts": {
    "dev": "npx @smithery/cli dev",
    "build": "npm run build:http",
    "build:stdio": "tsc",
    "build:http": "npx @smithery/cli build",
    "start": "npm run start:http",
    "start:http": "node .smithery/index.cjs",
    "start:stdio": "node dist/index.js",
    "test": "jest",
    "prepublishOnly": "npm run build:stdio"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "video-downloader",
    "yt-dlp",
    "s3",
    "cloudflare-r2",
    "social-media",
    "youtube",
    "facebook",
    "instagram",
    "tiktok",
    "remote-server",
    "smithery"
  ],
  "author": "MCP Video Cloud Server",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/mcp-video-cloud-server.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/mcp-video-cloud-server/issues"
  },
  "homepage": "https://github.com/your-username/mcp-video-cloud-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/s3-request-presigner": "^3.0.0",
    "uuid": "^10.0.0",
    "mime-types": "^2.1.35",
    "node-fetch": "^3.3.2",
    "zod": "^3.25.46"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^10.0.0",
    "@types/mime-types": "^2.1.4",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ]
}

