{
  "name": "mcp-video-download-server",
  "version": "1.0.0",
  "type": "module",
  "description": "Remote MCP server for downloading videos from social media platforms and storing them in S3-compatible cloud storage",
  "scripts": {
    "dev": "TRANSPORT=http npx tsx src/index.ts",
    "build": "npx tsc",
    "start": "npm run start:http",
    "start:http": "TRANSPORT=http node dist/index.js",
    "start:stdio": "node dist/index.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "video-downloader",
    "yt-dlp",
    "s3",
    "cloudflare-r2",
    "social-media",
    "youtube",
    "facebook",
    "instagram",
    "tiktok",
    "remote-server",
    "smithery"
  ],
  "author": "MCP Video Download Server",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ctaylor86/mcp-video-download-server.git"
  },
  "bugs": {
    "url": "https://github.com/ctaylor86/mcp-video-download-server/issues"
  },
  "homepage": "https://github.com/ctaylor86/mcp-video-download-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@smithery/sdk": "^1.0.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/s3-request-presigner": "^3.0.0",
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "uuid": "^10.0.0",
    "mime-types": "^2.1.35",
    "node-fetch": "^3.3.2",
    "zod": "^3.25.46"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/uuid": "^10.0.0",
    "@types/mime-types": "^2.1.4",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

